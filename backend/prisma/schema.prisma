generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  CreatedAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tasks Task[]

  @@map("user")
}

model Task {
  id        String   @id @default(cuid())
  CreatedAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  name        String
  priority    Priority?
  isComplited Boolean   @default(false) @map("is_complited")

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@map("task")
}

model TimeBlock {
  id         String @id @default(cuid())
  name       String
  timeMinets Int
  order      Int

  @@map("time-block")
}

enum Priority {
  high
  medium
  low
}
